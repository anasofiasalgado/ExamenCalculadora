<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mostrar" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="258dp"
            android:id="@+id/Numero7" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/Numero8" android:layout_marginEnd="8dp"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="258dp"
            android:id="@+id/Numero8" app:layout_constraintStart_toEndOf="@+id/Numero7"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/Numero9"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="258dp"
            android:id="@+id/Numero9" app:layout_constraintStart_toEndOf="@+id/Numero8"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/mas"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="258dp"
            android:id="@+id/mas" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/Numero9" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Calculadora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="24sp"
            android:layout_marginTop="44dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/ingresa" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/mostrar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.865"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Numero1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/Numero4"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Numero2" app:layout_constraintStart_toEndOf="@+id/Numero1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/Numero5"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Numero3" app:layout_constraintStart_toEndOf="@+id/Numero2"
            android:layout_marginStart="8dp"
            tools:layout_editor_absoluteY="402dp"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:id="@+id/multi"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/Numero3" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/menos"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Numero0" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/Numero1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="Result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultado" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/Numero2" app:layout_constraintStart_toEndOf="@+id/Numero0"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="borrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/borrar" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/Numero3" app:layout_constraintStart_toEndOf="@+id/resultado"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/divi" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/multi" app:layout_constraintStart_toEndOf="@+id/borrar"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Numero4" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/Numero7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/Numero5"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="5"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:id="@+id/Numero5"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/Numero8" app:layout_constraintStart_toEndOf="@+id/Numero4"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/Numero6"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Numero6" app:layout_constraintStart_toEndOf="@+id/Numero5"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/Numero9" app:layout_constraintEnd_toStartOf="@+id/menos"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menos" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/mas" app:layout_constraintStart_toEndOf="@+id/Numero6"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="1.0"/>

</android.support.constraint.ConstraintLayout>